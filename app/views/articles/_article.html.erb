<div>
    <h2><%= @article.title %></h2>
    <em>Written by <%= @article.name %></em><br/>
    <span>Article ID# <%= @article.id %></span><br/>
    <p><%= @article.body %></p>
</div>

<div>
    <%= button_to "Edit", edit_article_path(@article), method: :get %>
    <%= button_to "Delete", article_path(@article), method: :delete %>
</div>